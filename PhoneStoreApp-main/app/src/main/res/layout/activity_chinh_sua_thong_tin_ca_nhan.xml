        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chỉnh sửa thông tin cá nhân"
            android:textSize="30dp"
            android:gravity="center"
            android:fontFamily="@font/archivonarrow"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/dialogLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Họ và tên:       "
                    android:textColor="@color/black"
                    android:fontFamily="@font/archivonarrow"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"/>

                <EditText
                    android:id="@+id/edHoVaTen"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp"
                    android:hint="Nhap Ho Va Ten"
                    android:fontFamily="@font/archivonarrow"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại:  "
                    android:textColor="@color/black"
                    android:fontFamily="@font/archivonarrow"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"/>

                <EditText
                    android:id="@+id/edSDT"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp"
                    android:hint="Nhap SDT"
                    android:fontFamily="@font/archivonarrow"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email:              "
                    android:textColor="@color/black"
                    android:fontFamily="@font/archivonarrow"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"/>

                <EditText
                    android:id="@+id/edEmail"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp"
                    android:hint="NhapNX"
                    android:fontFamily="@font/archivonarrow"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày sinh:       "
                    android:textColor="@color/black"
                    android:fontFamily="@font/archivonarrow"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"/>

                <EditText
                    android:id="@+id/editNgaysinh"
                    android:layout_width="220dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp"
                    android:hint="Nhap mat khau"
                    android:fontFamily="@font/archivonarrow"/>

                <ImageButton
                    android:id="@+id/buttonDatePicker"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="11dp"
                    android:layout_below="@id/editChonNgaysinh"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="Chọn ngày sinh"
                    android:src="@drawable/calender_2"
                    android:scaleType="centerCrop"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mật khẩu:        "
                    android:textColor="@color/black"
                    android:fontFamily="@font/archivonarrow"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"/>

                <EditText
                    android:id="@+id/edMatKhau"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp"
                    android:hint="Nhap mat khau"
                    android:fontFamily="@font/archivonarrow"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="50px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/buttonSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lưu"
                    android:textColor="@color/black"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#EBEBEB"/>

                <Button
                    android:id="@+id/buttonCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Hủy"
                    android:backgroundTint="#EBEBEB"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Menu Layout at the bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#444444"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Button 1"
            android:src="@drawable/icon_home" />

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Button 2"
            android:paddingStart="15dp"
            android:src="@drawable/icon_home1" />

        <ImageButton
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Button 3"
            android:paddingStart="15dp"
            android:src="@drawable/icon_home2" />

        <ImageButton
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Button 4"
            android:paddingStart="15dp"
            android:src="@drawable/icon_home4" />

        <ImageButton
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Button 5"
            android:paddingStart="15dp"
            android:src="@drawable/icon_home5" />
    </LinearLayout>
</LinearLayout>
